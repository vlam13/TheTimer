<Window x:Class="TheTimerWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TheTimerWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"></RowDefinition>
        </Grid.RowDefinitions>
        <Button Width="200" Name="StartButton" Margin="1" Click="StartTimerButtonClick">Start</Button>
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <TextBox Name="Mins" Width="50" Margin="3" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" PreviewKeyDown="PreviewTimeTextboxKeyDown">0</TextBox>
            <TextBox Name="Secs" Width="50" Margin="3" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" PreviewKeyDown="PreviewTimeTextboxKeyDown">3</TextBox>
        </StackPanel>
        <Button Grid.Row="2" Name="StopButton" Width="200" Margin="1" Click="StopTimerButtonClick">Stop</Button>
    </Grid>
</Window>
